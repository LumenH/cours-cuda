/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/
Animable_I<uchar4>* MandelbrotProvider::createAnimable(void){
    DomaineMath domaineMath = domaineMath(0, 0, 2*PI, 2*PI); //Check in PDF

    float dt = 2*PI/800;  //Check PDF
    int n = 2;

    int dw = 16*60*2; //check PDF
    int dh = 16 * 60; //check PDF

    return new Mandelbrot(dw, dh, dt, n, domaineMath);
}
/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/

